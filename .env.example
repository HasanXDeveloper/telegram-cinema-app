# Django настройки
SECRET_KEY=django-insecure-change-me-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,cinema.horizonserver.space

# База данных
DB_NAME=telegram_cinema
DB_USER=cinema_user
DB_PASSWORD=cinema_pass
DB_HOST=localhost
DB_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/0

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# ID администраторов (через запятую)
ADMIN_IDS=123456789,987654321

# TMDB API (для получения метаданных фильмов)
TMDB_API_KEY=your-tmdb-api-key-here

# Парсер настройки
PARSER_DELAY=3600  # Интервал парсинга в секундах (1 час)
PARSER_LIMIT=50    # Максимум фильмов за один запуск

# Домен для продакшена
DOMAIN=cinema.horizonserver.space

# Email настройки (для уведомлений)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# Sentry (для мониторинга ошибок)
SENTRY_DSN=your-sentry-dsn-here

# Cloudflare (для CDN и защиты)
CLOUDFLARE_API_TOKEN=your-cloudflare-token
CLOUDFLARE_ZONE_ID=your-zone-id